<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                style="@style/VerticalColumn"
                android:id="@+id/ll_left_column"
                >

            <ImageView
                    android:id="@+id/my_left_image_view"
                    android:contentDescription="@string/description_alleyway"
                    android:adjustViewBounds="true"
                    android:src="@drawable/alley_architecture_buildings_2526517"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_right_column"
                style="@style/VerticalColumn"
                >

            <ImageView
                    android:contentDescription="@string/description_sneakers"
                    android:id="@+id/my_right_image_view"
                    android:adjustViewBounds="true"
                    android:src="@drawable/close_up_colorful_colors_2529148"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>